@model WebApp.Models.listComments

<h1>Comments</h1>

<div>
    @foreach(var item in Model.listCom)
    {
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Date
            </dt>
            <dd class="col-sm-10">
                @item.Date
            </dd>
            <dt class="col-sm-2">
                Content
            </dt>
            <dd class="col-sm-10">
                @item.Content
            </dd>
            <dt class="col-sm-2">
                Avatar
            </dt>
            <dd class="col-sm-10">
                @item.Avatar
            </dd>
            <dt class="col-sm-2">
                Rate
            </dt>
            <dd class="col-sm-10">
                @item.Rate
            </dd>
        </dl>
    }
</div>
<div>
    @Html.ActionLink("Back to home", "index")
</div>