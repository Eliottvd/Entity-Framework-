@model WebApp.Models.listComments

<html>
    <body>
        <h1>Comments</h1>

        <div>
            <h2>Add a comment : </h2>

            <form method="POST" action="/Movie/AddComment">
                <br /><br />User :    <input type="text" name="avatar" value="" />
                <br /><br />Content : <input type="text" name="content" value="" width="300" height="60" />
                <br /><br />Rate :    <input type="text" name="rate" value="" width="20" />
                <input type="hidden" name="ActorId" value=@ViewBag.ActorId /><br/>
                <label>&nbsp;</label><br />
                <input type="submit" value="Add Comment" class="submit" />
            </form>

        </div>
        <div>
            @foreach (var item in Model.listComSortedByDateDesc)
            {
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        Date
                    </dt>
                    <dd class="col-sm-10">
                        @item.Date
                    </dd>
                    <dt class="col-sm-2">
                        Content
                    </dt>
                    <dd class="col-sm-10">
                        @item.Content
                    </dd>
                    <dt class="col-sm-2">
                        Avatar
                    </dt>
                    <dd class="col-sm-10">
                        @item.Avatar
                    </dd>
                    <dt class="col-sm-2">
                        Rate
                    </dt>
                    <dd class="col-sm-10">
                        @item.Rate
                    </dd>
                </dl>
            }
        </div>
        <div>
            @Html.ActionLink("Back to home", "index")
        </div>
    </body>
</html>
