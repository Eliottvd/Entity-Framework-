@model WebApp.Models.listMovies
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>

    @foreach (var item in Model.listFilm)
    {
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Title
            </dt>
            <dd class="col-sm-10">
                @item.Title
            </dd>
            <dt class="col-sm-2">
                Posterpath
            </dt>
            <dd class="col-sm-10">
                @item.Posterpath
            </dd>
            <dt class="col-sm-2">
                Runtime
            </dt>
            <dd class="col-sm-10">
                @item.Runtime
            </dd>
            <dt class="col-sm-2">
                Release Date
            </dt>
            <dd class="col-sm-10">
                @item.ReleaseDate
            </dd>
        </dl>
    }
</div>
<div>
    @Html.ActionLink("Back to home", "index")
</div>